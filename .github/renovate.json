{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases",
    "schedule:weekly"
  ],
  "stabilityDays": 14,
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Security updates - immediate (high/critical only)",
      "matchUpdateTypes": ["patch", "minor", "major"],
      "matchCurrentVersion": "!/^0/",
      "vulnerabilitySeverity": ["high", "critical"],
      "stabilityDays": 0,
      "groupName": "Security updates",
      "schedule": ["at any time"]
    },
    {
      "description": "Group production dependencies",
      "matchDepTypes": ["dependencies"],
      "groupName": "Production dependencies"
    },
    {
      "description": "Group dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "groupName": "Dev dependencies"
    }
  ]
}
